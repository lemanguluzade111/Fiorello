@model List<Product>

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                  
                </div>
                <div class="row" id="myProducts">
                   @foreach (Product product in Model)
            {
                 <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" >
                            <div class="img">
                                <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id">
                                    <img src="~/img/@product.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@product.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$@product.Price</span>
                            </div>
                        </div>
                    </div>
            }

                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-center my-3">
                        <a id="loadMore" class="btn btn-secondary text-white">Load More</a>
                        <input type="hidden" value="@ViewBag.ProductsCount" />
                    </div>
                </div>
            </div>
        </section>

        <!-- PRODUCTS END -->
@section Scripts
{
    <script asp-append-version="true" src="~/js/loadMore.js"></script>
}
      